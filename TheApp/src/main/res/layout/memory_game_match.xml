<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memory_game_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/memory_game_relative_layout"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/memory_game_vertical_linear">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bm1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bm5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bm9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm10"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm11"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm12"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bm13"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm14"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm15"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bm16"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/give_up_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Give Up" />

                <Button
                    android:id="@+id/done_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Done" />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/tile_one"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="65dp"/>

        <Button
            android:id="@+id/tile_two"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="195dp"/>
        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memory_game_vertical_linear"
            android:id="@+id/memory_player_layout1">
            <TextView
                android:id="@+id/playerOneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/playerOneScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memory_game_vertical_linear"
            android:layout_marginLeft="195dp">
            <TextView
                android:id="@+id/playerTwoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/playerTwoScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>